{%- macro postsList(posts) -%}
  <ul class="posts-list">
    {%-for post in posts -%}
      <li class="posts-lists-entry">
        <div class="posts-entry">
          <span class="posts-entry-title">
            <a href={{post.url}}>{{post.data.title}}</a>
          </span>
          <span class="posts-entry-date">
            {{post.date | prettyDate('DmY')}}
          </span>
          <span class="posts-entry-summary">
            {{post.data.summary or "" }}
          </span>
        </div>
      </li>
    {%- endfor -%}
  </ul>
{% endmacro %}
